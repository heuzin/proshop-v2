{
  "name": "ecommerce-app",
  "version": "1.0.0",
  "description": "eCommerce application built with the MERN stack",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "ts-node backend/seeder.ts",
    "data:destroy": "ts-node backend/seeder.ts -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heuzin/proshop-v2.git"
  },
  "author": "Matheus Silva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/heuzin/proshop-v2/issues"
  },
  "homepage": "https://github.com/heuzin/proshop-v2#readme",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "colors": "^1.4.0",
    "concurrently": "^9.2.1",
    "cookie-parser": "^1.4.7",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.1",
    "nodemon": "^3.1.11"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.3",
    "typescript": "^5.9.3"
  }
}
